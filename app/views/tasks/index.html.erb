<h1>ToDo一覧</h1>
<table>
  <tr>
    <th>Id</th>
    <th>Title</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  <% @tasks.each do|task| %>
  <tr>
    <td><%= task.id %></td>
    <td><%= task.title %></td>
    <td><%= task.description %></td>
    <td><%= link_to '詳細', task_path(task) %></td>
    <td><%= link_to '編集', edit_task_path(task) %></td>
    <td><%= link_to '削除', task_path(task), method: :delete %></td>
  </tr>
  <% end %>
</table>
<p><%= link_to '新規作成', new_task_path %></p>